{
    "name": "moehakram/webphp-oop",
    "description": "An elegant PHP framework leveraging OOP principles to simplify.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Akram",
            "email": "moeh.akram@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "moehakram/phpquick": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 -t public",
        "start": "php -S localhost:8080 -t public",
        "test-filter": "php tests/TestValidator.php"
    },
    "keywords": [
        "php",
        "package",
        "framework",
        "oop",
        "mvc"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/moehakram/webphp-oop"
        }
    ]
}
