{
    "name": "moehakram/webphp-oop",
    "description": "An elegant PHP framework leveraging OOP principles to simplify.",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "muhammad akram",
            "email": "moeh.akram@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "moehakram/phpquick": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }, 
        "files": [
            "config/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.29"
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public",
        "build": "echo 'Building the project...'"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "keywords": [
        "php",
        "package",
        "framework",
        "oop",
        "mvc"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/moehakram/webphp-oop.git"
        }
    ]
}
