{
    "name": "moehakram/phpquick",
    "description": "An elegant PHP framework leveraging OOP principles to simplify and enhance MVC architecture.",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "muh. akram",
            "email": "moeh.akram@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.10",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "MA\\PHPQUICK\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.29"
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public",
        "build": "echo 'Building the project...'"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "keywords": [
        "php",
        "package",
        "framework",
        "oop",
        "mvc"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/moehakram/web-dev-php-oop.git"
        }
    ]
}